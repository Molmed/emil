citHeader("To cite package ‘predict’ in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry = "Manual",
         title = "Developer Friendly Predictive Modeling Using the predict Package for R",
         author = personList(as.person("Christofer L Bäcklin"),
                             as.person("Mats G Gustafsson")),
         year = year,
         note = vers,

         textVersion =
         paste0("Christofer L Bäcklin, Mats G Gustafsson (",
                year,
                "). Developer Friendly Predictive Modeling Using the predict Package for R. ",
                vers, "."))

